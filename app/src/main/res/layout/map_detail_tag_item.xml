<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/map_detail_tag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/map_detail_tag_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/map_detail_tag_view"
        app:layout_constraintEnd_toEndOf="@id/map_detail_tag_view"
        app:layout_constraintTop_toTopOf="@id/map_detail_tag_view"
        app:layout_constraintBottom_toBottomOf="@id/map_detail_tag_view"
        android:text="#태그"
        android:id="@+id/map_detail_tag_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>