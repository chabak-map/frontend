<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/my_post_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="타이틀"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/my_post_writer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="닉네임"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/my_post_title_tv"
        app:layout_constraintTop_toBottomOf="@id/my_post_title_tv" />

    <TextView
        android:id="@+id/my_post_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="날짜"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/my_post_writer_tv"
        app:layout_constraintTop_toBottomOf="@id/my_post_title_tv" />

    <ImageView
        android:id="@+id/my_post_blank_heart_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/blankheart"
        app:layout_constraintStart_toStartOf="@id/my_post_title_tv"
        app:layout_constraintTop_toBottomOf="@id/my_post_writer_tv" />

    <TextView
        android:id="@+id/my_post_like_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="좋아요"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/my_post_blank_heart_tv"
        app:layout_constraintTop_toBottomOf="@id/my_post_writer_tv" />

    <ImageView
        android:id="@+id/my_post_speech_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/speechbubble"
        app:layout_constraintStart_toEndOf="@id/my_post_like_tv"
        app:layout_constraintTop_toBottomOf="@id/my_post_writer_tv" />

    <TextView
        android:id="@+id/my_post_speech_cnt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:text="댓글"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/my_post_speech_tv"
        app:layout_constraintTop_toBottomOf="@id/my_post_writer_tv" />


    <ImageView
        android:id="@+id/my_post_img"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/my_post_title_tv" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/basic"
        app:layout_constraintTop_toBottomOf="@id/my_post_img" />
</androidx.constraintlayout.widget.ConstraintLayout>