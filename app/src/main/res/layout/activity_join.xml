<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/join_signup"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/name_off"
        app:layout_constraintBottom_toBottomOf="@id/join_name"
        app:layout_constraintStart_toStartOf="@id/join_name"
        app:layout_constraintTop_toTopOf="@id/join_name" />

    <EditText
        android:id="@+id/join_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/input_id"
        android:hint="@string/join_name"
        android:paddingLeft="44dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_join" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/mail_off"
        app:layout_constraintBottom_toBottomOf="@id/join_id"
        app:layout_constraintStart_toStartOf="@id/join_id"
        app:layout_constraintTop_toTopOf="@id/join_id" />

    <EditText
        android:id="@+id/join_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/input_id"
        android:hint="@string/join_id"
        android:paddingLeft="44dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/join_name" />

    <TextView
        android:id="@+id/error_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingLeft="10dp"
        android:text="@string/email_error"
        android:textColor="@color/error"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/join_id" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/password_off"
        app:layout_constraintBottom_toBottomOf="@id/join_pw"
        app:layout_constraintStart_toStartOf="@id/join_pw"
        app:layout_constraintTop_toTopOf="@id/join_pw" />

    <EditText
        android:id="@+id/join_pw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/input_id"
        android:hint="@string/join_pw"
        android:paddingLeft="44dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/error_email" />

    <TextView
        android:id="@+id/error_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingLeft="10dp"
        android:text="@string/passwd_error"
        android:textColor="@color/error"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/join_pw" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/password_off"
        app:layout_constraintBottom_toBottomOf="@id/join_check_pw"
        app:layout_constraintStart_toStartOf="@id/join_check_pw"
        app:layout_constraintTop_toTopOf="@id/join_check_pw" />

    <EditText
        android:id="@+id/join_check_pw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/input_id"
        android:hint="@string/check_pw"
        android:paddingLeft="44dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/error_pw" />

    <TextView
        android:id="@+id/error_check_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingLeft="10dp"
        android:text="@string/passwd_check_error"
        android:textColor="@color/error"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/join_check_pw" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="number"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_check_pw"
        android:background="@drawable/input_id"
        android:hint="@string/phone_num"
        android:textSize="16sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/phone_num_et"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/phone_num_check"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/join_check_pw"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:id="@+id/check_phone_num_btn"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/phone_num_et"
        android:background="@drawable/input_id"
        android:hint="@string/check_num"
        android:padding="16dp"
        android:textSize="16sp"
        android:inputType="number"
        android:visibility="gone"
        android:id="@+id/check_phone_num_et"/>

    <Button
        android:id="@+id/join_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/join_click"
        android:backgroundTint="@color/join_color"
        android:text="@string/join"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/check_phone_num_et" />
</androidx.constraintlayout.widget.ConstraintLayout>