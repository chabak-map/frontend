<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_arrow_img"
                android:layout_width="12dp"
                android:layout_height="23dp"
                android:layout_margin="16dp"
                android:background="@drawable/backarrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_post"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/back_arrow_img" />

            <ImageView
                android:id="@+id/share_img"
                android:layout_width="24dp"
                android:layout_height="30dp"
                android:layout_margin="16dp"
                android:background="@drawable/share"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detail_post_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="타이틀"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/detail_place_vp"
                app:layout_constraintTop_toBottomOf="@id/back_arrow_img" />

            <TextView
                android:id="@+id/detail_post_writer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:text="writer"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/detail_post_title_tv"
                app:layout_constraintTop_toBottomOf="@id/detail_post_title_tv" />

            <TextView
                android:id="@+id/detail_post_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="날짜"
                app:layout_constraintStart_toStartOf="@id/detail_post_writer_tv"
                app:layout_constraintTop_toBottomOf="@id/detail_post_writer_tv" />

            <View
                android:id="@+id/content_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/basic"
                app:layout_constraintTop_toBottomOf="@id/detail_post_date_tv" />

            <TextView
                android:id="@+id/detail_post_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="내용"
                app:layout_constraintStart_toStartOf="@id/detail_place_vp"
                app:layout_constraintTop_toBottomOf="@id/content_line" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/detail_place_vp"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@id/detail_post_content_tv" />

            <TextView
                android:id="@+id/detail_post_tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/detail_post_tag"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/detail_place_vp"
                app:layout_constraintTop_toBottomOf="@id/detail_place_vp" />

            <TextView
                android:id="@+id/detail_post_detail_tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="태그내용"
                app:layout_constraintStart_toStartOf="@id/detail_post_tag_tv"
                app:layout_constraintTop_toBottomOf="@id/detail_post_tag_tv" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/basic"
                app:layout_constraintTop_toBottomOf="@id/detail_post_detail_tag_tv"
                android:id="@+id/detail_post_bottom_line"/>

            <ImageView
                android:id="@+id/detail_post_like_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/blankheart"
                app:layout_constraintStart_toStartOf="@id/detail_place_vp"
                app:layout_constraintTop_toBottomOf="@id/detail_post_bottom_line" />

            <TextView
                android:id="@+id/detail_post_like_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:text="좋아요 수"
                app:layout_constraintStart_toEndOf="@id/detail_post_like_img"
                app:layout_constraintTop_toBottomOf="@id/detail_post_bottom_line" />

            <TextView
                android:id="@+id/post_place_review_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@id/detail_post_comment_img"
                android:text="댓글 수"
                app:layout_constraintTop_toBottomOf="@id/detail_post_bottom_line" />

            <ImageView
                android:layout_marginStart="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/speechbubble"
                app:layout_constraintTop_toBottomOf="@id/detail_post_bottom_line"
                app:layout_constraintStart_toEndOf="@id/detail_post_like_cnt_tv"
                android:id="@+id/detail_post_comment_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="@id/detail_post_comment_img"
                android:text="@string/report"
                android:id="@+id/detail_post_report_tv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>