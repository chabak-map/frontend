<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/logo"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/logo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/logo"
        android:textColor="@color/logo"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kakao_login"
        android:textColor="@color/kakao_text"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_kakao_login"
        app:layout_constraintEnd_toEndOf="@id/btn_kakao_login"
        app:layout_constraintStart_toStartOf="@id/btn_kakao_login"
        app:layout_constraintTop_toTopOf="@+id/btn_kakao_login" />

    <ImageView
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        android:src="@drawable/kakao_logo"
        app:layout_constraintBottom_toBottomOf="@+id/btn_kakao_login"
        app:layout_constraintStart_toStartOf="@+id/btn_kakao_login"
        app:layout_constraintTop_toTopOf="@+id/btn_kakao_login" />

    <ImageButton
        android:id="@+id/btn_kakao_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/oauth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/google_login"
        android:textColor="@color/kakao_text"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_google_login"
        app:layout_constraintEnd_toEndOf="@id/btn_google_login"
        app:layout_constraintStart_toStartOf="@id/btn_google_login"
        app:layout_constraintTop_toTopOf="@+id/btn_google_login" />

    <ImageView
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        android:src="@drawable/google"
        app:layout_constraintBottom_toBottomOf="@+id/btn_google_login"
        app:layout_constraintStart_toStartOf="@+id/btn_google_login"
        app:layout_constraintTop_toTopOf="@+id/btn_google_login" />

    <ImageButton
        android:id="@+id/btn_google_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/oauth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_kakao_login" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_id"
        android:hint="@string/enter_id"
        android:inputType="textEmailAddress"
        android:paddingStart="44dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btn_google_login"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/iv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:src="@drawable/mail_off"
        app:layout_constraintBottom_toBottomOf="@+id/et_email"
        app:layout_constraintStart_toStartOf="@+id/et_email"
        app:layout_constraintTop_toTopOf="@+id/et_email" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_id"
        android:hint="@string/enter_pw"
        android:inputType="textPassword"
        android:paddingStart="44dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/et_email" />

    <ImageView
        android:id="@+id/iv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:src="@drawable/password_off"
        app:layout_constraintBottom_toBottomOf="@+id/et_password"
        app:layout_constraintStart_toStartOf="@+id/et_password"
        app:layout_constraintTop_toTopOf="@+id/et_password" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/oauth"
        android:backgroundTint="@color/logo"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/btn_login"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_id"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/find_id_tv"/>

        <View
            android:layout_marginStart="20dp"
            android:layout_width="3dp"
            android:layout_height="25dp"
            android:background="@color/basic"
            android:id="@+id/div_low"/>

        <TextView
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_pw"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/find_pw_tv"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>